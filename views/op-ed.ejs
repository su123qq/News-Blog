<h1>What's Your Opinion About Today's World Matters?</h1>
 
<% if (posts.length === 0) { %>
  <form action="/submit" method="POST">
    <div class = "row">
      <div class="col">
        <label>Article Title: </label>
        <input type="text" class="form-control" name="title" required>
      </div>
      <div class="col">
        <label>Your Name: </label>
        <input type="text" class="form-control" name="name" required>
      </div>
    </div>

    <div class="form-group">
      <label>Enter Text: </label><br>
      <small class="italic">Drag the lower right corner of the text area to expand the text area</small>
      <textarea name="text" class="form-control" rows="3"></textarea><br>
    </div>  
    <button type="submit" class="btn btn-outline-secondary">Submit</button>
  </form>
<% } else { %>
  <form action = "/form" method="GET">
    <button type="submit" class="btn btn-outline-secondary btn-lg" id="addbutton">Add Post</button>
  </form>  
  <h2 id="postsection"> Posts: </h2>
  <div class = "row">
   <% for (let i = 0; i < posts.length; i++ ) {%>
    <div class="col-xl-3 col-md-4 col-sm-12">
      <%if (locals.changetoUpperCase) {%>
      <% posts[i].title = changetoUpperCase(posts[i].title) %>
      <% posts[i].name = changetoUpperCase(posts[i].name) %>
      <%}%>
      <div class="postcard">  
      <h4><%= posts[i].title %></h4>
      
      <p class="italic">Author: <%= posts[i].name %></p>
      <p><%= posts[i].text.substring(0,200) %></p>
      <div class="button-group">
        <form action="/expand" method="POST">
          <input type="hidden" name="id" value="<%=i%>">
          <button type="submit" class="btn btn-outline-primary">Show More</button>
        </form>
        <form action="/edit", method="POST">
          <input type="hidden" name="id" value="<%=i%>">
          <button type="submit" class="btn btn-outline-success">Edit</button>
        </form>
        <form action="/delete", method="POST">
          <input type="hidden" name="id" value="<%=i%>">
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
    </div>
    </div>
    <% } %>
  </div>
  <% } %>
